<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wisteria</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <aside>
        <h1 id="icon"><img src="/images/icon.png" alt="icon"></h1>
        <div id="btn-nav">
            <a href="#"><img src="/images/home.png" alt="home"></a>
            <a href="#" id="add-post-btn"><img src="/images/post.png" alt="post"></a>
            <a href="#"><img src="/images/profile.png" alt="profile"></a>
        </div>
        <h1>‚ùï</h1>
    </aside>
    <main>
        <div id="post-modal">
            <form action="/submit-post" method="post" id="post-form">
                <div id="modal-content">
                    <h1>New Post</h1>
                    <textarea name="post" id="post" placeholder="What's on your mind..."></textarea>
                    <div id="modal-btns">
                        <button id="close-modal-btn" class="modal-btn">Cancel</button>
                        <input type="submit" value="Post" id="post-content-btn" class="modal-btn">
                    </div>
                </div>
            </form>
        </div>
        <section id="content-section">
            <% if (posts.length !==0) {%>
                <h1 id="content-header">Posts for today</h1>
                <% } else {%>
                    <h1 id="no-post-msg">There are no posts today.</h1>
                    <% } %>
                        <% posts.forEach(post=> { %>
                            <article class="section__content-section">
                                <p class="content">
                                    <%= post.value %>
                                </p>
                                <div class="post-actions">
                                    <button class="like-btn">Like</button>
                                    <button class="comment-btn">Comment</button>
                                </div>
                            </article>
                            <% }); %>
        </section>
    </main>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="/scripts/index.js"></script>
</body>

</html>